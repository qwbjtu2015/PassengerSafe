<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.passengersafe.MainActivity" >

    <TextView
        android:id="@+id/textview_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="出发地：北京交通大学南门"
        android:textSize="24dp" >

    </TextView>

    <TextView
        android:id="@+id/textview_dest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="目的地：清华大学"
        android:textSize="24dp" >

    </TextView>

    <Button
        android:id="@+id/button_trace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="轨迹查询" 
        android:background="#00CC00"
        android:onClick="selectTrace"/>

    <Button
        android:id="@+id/button_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#9A32CD"
        android:text="自动设置地理围栏" />

    <Button
        android:id="@+id/button_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFF00"
        android:text="手动设置地理围栏" />

</LinearLayout>