<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PassengerMainActivity" >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text1"
        android:layout_below="@+id/radioGroup1"
        android:gravity="center"
        android:height="32dip"
        android:text="服务态度：" />

    <CheckBox
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text1"
        android:layout_toRightOf="@+id/text1"
        android:gravity="center"
        android:text="1" />

<CheckBox
    android:id="@+id/box2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text1"
    android:layout_toRightOf="@+id/text1"
    android:gravity="center"
    android:text="2" />
<CheckBox
    android:id="@+id/box3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/box2"
    android:layout_toRightOf="@+id/text1"
    android:gravity="center"
    android:text="3" />
<CheckBox
    android:id="@+id/box4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/box3"
    android:layout_toRightOf="@+id/text1"
    android:gravity="center"
    android:text="4" />

    <CheckBox
        android:id="@+id/box5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text2"
        android:layout_toRightOf="@+id/text2"
        android:gravity="center"
        android:text="1" />

<CheckBox
    android:id="@+id/box6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/box5"
    android:layout_toRightOf="@+id/text2"
    android:gravity="center"
    android:text="2" />

<TextView
    android:id="@+id/text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/box1"
    android:layout_alignBottom="@+id/box1"
    android:layout_marginLeft="22dp"
    android:layout_toRightOf="@+id/box1"
    android:gravity="center"
    android:height="32dip"
    android:text="乘车环境：" />

<CheckBox
    android:id="@+id/box7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/box6"
    android:layout_below="@+id/box6"
    android:gravity="center"
    android:text="3" />

<CheckBox
    android:id="@+id/box8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/box7"
    android:layout_below="@+id/box7"
    android:gravity="center"
    android:text="4" />

<TextView
    android:id="@+id/text3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/text1"
    android:layout_below="@+id/box4"
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:height="32dip"
    android:text="评语：" />

<EditText
    android:id="@+id/edit1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/text3"
    android:layout_toRightOf="@+id/text3"
    android:ems="10" />

<Button
    android:id="@+id/button_jvbao"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_alignLeft="@+id/text3"
    android:layout_below="@+id/edit1"
    android:layout_marginTop="26dp"
    android:background="#ffffff"
    android:text="一键举报" 
    />
<Button
    android:id="@+id/button_submit"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:layout_alignLeft="@+id/button_jvbao"
    android:layout_below="@+id/button_jvbao"
    android:layout_marginTop="26dp"
    android:background="#00cc00"
    android:text="提交" />

>
</RelativeLayout>